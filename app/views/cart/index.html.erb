<title>Your Cart | Grocer Store</title>

<% if @cart.empty? %> 
  <p>Your Cart is empty</p>
<% end %>

<% total = 0 %>

<table class="cart">
<tr>
  <td class="legend"></td>
  <td class="legend">Item</td>
  <td class="legend">Price</td>
  <td class="legend">Qty</td>
  <td class="legend">Total</td>
</tr>

<% @cart.each do |id, quantity| %>
<% product = Product.find_by_id(id) %>
<tr>
<td>
  <div class="image">
    <%= link_to (image_tag product.image_url, :style => "height:80px"), product %>
  </div>
</td>
<td class="title"><%= link_to product.title, product %></td>
<td class="price"><%= product.price %></td>
<td class="quantity"><%= quantity %><br /></td>
<td class="price"><%= number_to_currency(quantity * product.price, unit: "Eur") %></td> 
</tr>
<% total += quantity * product.price %>
<% end %>

<tr>
  <td colspan="4">
    <div class="total">Total:</div>
  </td>
<td>
  <div class="price"><%= number_to_currency(total, unit: "Eur") %></div>
</td>
</tr>    
</table>

<p>
<%= link_to "Continue Shopping", products_path, class:"btn btnRed" %>
<%= link_to "Clear Cart", cart_clear_path, class:"btn btnRed" %>
</p>