
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Desc:</strong>
  <%= @product.desc %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @product.image_url %>
</p>

<%= link_to "Rate", new_product_rating_path(@product) %>

<% if user_signed_in? %>
        <% if current_user.admin? %>
			<%= link_to 'Edit', edit_product_path(@product), class:"btn btnRed" %>|
			<%= link_to 'Back', products_path, class:"btn btnRed" %>
		<% end %>
<% end %>

